<% layout("/layouts/bolierplate.ejs") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3 mb-3">Signup for WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-lable">Username</label>
                    <input name="username" id="username" placeholder="enter Username" type="text" class="form-control"
                        required>
                    <div class="invalid-feedback">Please enter the Username
                    </div>
                    <div class="valid-feedback">Looks good *_*
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-lable">E-mail</label>
                    <input name="email" id="email" placeholder="enter Email" type="text" class="form-control"
                        required>
                    
                </div>
                <div class="mb-3">
                    <label for="password" class="form-lable">Password</label>
                    <input name="password" id="email" placeholder="enter Password" type="password" class="form-control"
                        required>
                </div>
                <button class="btn btn-success">Sign-up</button>

            </form>
        </div>
    </div>