<% layout("/layouts/bolierplate.ejs") %>

    <body>
        <br>
        <div class="row">


            <div class="col-8 offset-2">
                <h3> Create New listing </h3><br>
                <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Please enter the title
                        </div>
                        <div class="valid-feedback">Looks good *_*
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" id="" cols="30" rows="10" required
                            placeholder="enter the description" class="form-control"></textarea><br>
                        <div class="invalid-feedback">Please enter the description
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-lable">Upload listing image </label>
                        <input name="listing[image]" placeholder="Upload listing image" type="file"
                            class="form-control"><br>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input name="listing[price]" placeholder="enter price"  class="form-control"
                                required><br>
                            <div class="invalid-feedback">enter the price!!
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country</label>
                            <input name="listing[country]" placeholder="enter country " type="text" class="form-control"
                                required><br>
                            <div class="invalid-feedback">Please enter the name country
                            </div>

                        </div>
                    </div>
                    <div class="mb-3">

                        <label for="location" class="form-lable">Location</label>
                        <input name="listing[location]" placeholder="enter location " type="text" class="form-control"
                            required><br>
                        <div class="invalid-feedback">Please enter the location
                        </div>
                    </div>

                    <button class="btn btn-dark mb-3 add-btn"> Add </button>

                </form>
            </div>
        </div>
    </body>