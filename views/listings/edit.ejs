<% layout("/layouts/bolierplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3> Edit your listing </h3><br>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate
                    class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input class="form-control" name="listing[title]" value="<%=listing.title %>" type="text"
                            required><br>
                        <div class="invalid-feedback"> please enter the new title</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea class="form-control" name="listing[description]" id="" cols="30" required
                            rows="10"> <%=listing.description%></textarea><br>
                        <div class="invalid-feedback">enter the new short description</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-lable">Upload new image</label>
                        <input class="form-control" name="listing[image]" type="file"><br>
                        <div class="invalid-feedback"> please enter the new image</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input class="form-control" name="listing[price]" required value="<%=listing.price %>"
                                type="number"><br>
                            <div class="invalid-feedback"> please enter the updated price</div>
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="country" class="form-lable">Country</label>
                            <input class="form-control" name="listing[country]" required value="<%=listing.country %>"
                                type="text"><br>
                            <div class="invalid-feedback"> please enter the country</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input class="form-control" name="listing[location]" required value="<%=listing.location %>"
                            type="text"><br>
                        <div class="invalid-feedback"> please enter the new location</div>
                    </div>

                    <button class="btn btn-dark edit-btn mb-3"> Edit </button>

                </form>
            </div>
        </div>

    </body>